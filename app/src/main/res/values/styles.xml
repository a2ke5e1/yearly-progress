<resources>
    <style name="Widget.YearlyProgress.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.YearlyProgress.AppWidget.Container.Transparent" parent="Widget.YearlyProgress.AppWidget.Container">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.YearlyProgress.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CircularProgressIndicator" parent="Widget.AppCompat.ProgressBar">
        <item name="android:padding">5dp</item>
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
        <item name="android:progressTint">@color/light_blue_900</item>
        <item name="android:progressBackgroundTint">@color/light_blue_50</item>
    </style>

    <style name="SquircleProgressIndicator" parent="Widget.AppCompat.ProgressBar">
        <item name="android:padding">0dp</item>
        <item name="android:progressDrawable">@drawable/squircle_progress_drawable</item>
    </style>

    <style name="SquircleProgressIndicatorHorizontal" parent="Widget.AppCompat.ProgressBar">
        <item name="android:padding">0dp</item>
        <item name="android:progressDrawable">@drawable/squircle_progress_horizontal_drawable</item>
    </style>
</resources>