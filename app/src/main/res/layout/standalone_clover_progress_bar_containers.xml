<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/widgetContainerDefault"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_clover_50"
        android:theme="@style/WidgetTheme.Default"
        />

    <ImageView
        android:id="@+id/widgetContainerGreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_clover_50"
        android:theme="@style/WidgetTheme.Green"
        />

    <ImageView
        android:id="@+id/widgetContainerDynamic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_clover_50"
        android:theme="@style/WidgetTheme.Dynamic"
        />

</LinearLayout>