<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/material_card_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="130dp"
        app:cardBackgroundColor="@color/widget_background_color"
        app:cardCornerRadius="30dp"
        app:strokeWidth="0dp">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/material_card_progress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="#12ACABAB"
            android:backgroundTintMode="multiply"
            app:cardBackgroundColor="?attr/colorPrimary"
            app:cardCornerRadius="0dp"
            app:strokeWidth="0dp">

        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/year"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:textColor="@color/widget_text_color" />

            <TextView
                android:id="@+id/widget_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/widget_title"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:text="@string/demo_year"
                android:textColor="@color/widget_text_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/widget_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/widget_data_info"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/demo_year_per"
                android:textColor="@color/widget_text_color"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_data_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="22dp"
                android:text="of 32456758s"
                android:textColor="@color/widget_text_color"
                android:textSize="15sp" />

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
