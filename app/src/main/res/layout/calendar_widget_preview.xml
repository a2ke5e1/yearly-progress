<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:theme="@style/Theme.YearlyProgress.AppWidgetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/app_widget_background" />


    <RelativeLayout
        style="@style/Widget.YearlyProgress.AppWidget.Container.Transparent"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/topContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/event_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOW"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/md_theme_onPrimaryContainer"
                android:textSize="8sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Event Title"
                android:textColor="@color/md_theme_tertiary"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/event_description"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Event Description"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="10sp"
                android:textColor="@color/md_theme_onSurfaceVariant"
                />


            <TextView
                android:id="@+id/event_duration"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Event Duration"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="8sp"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widgetProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/demo_day_per"
                android:textAlignment="center"
                android:textColor="@color/md_theme_onPrimaryContainer"
                android:textSize="24sp"
                />

            <TextView
                android:id="@+id/widgetDays"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="11sp"
                android:textStyle="normal"
                tools:text="112d left" />


            <ProgressBar
                android:id="@+id/widgetProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:layout_marginTop="2dp"
                android:max="100"
                android:progress="20"
                android:progressBackgroundTint="@color/widget_progress_bar_background_color"
                android:progressTint="@color/widget_text_color" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="3sp"
        android:fontFamily="@font/inter_semibold"
        android:padding="4dp"
        android:letterSpacing="0.5"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="@color/widget_text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:clipChildren="true"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/prev_btn"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/home_btn"
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/next_btn"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>