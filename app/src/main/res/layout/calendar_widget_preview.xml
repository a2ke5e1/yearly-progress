<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:theme="@style/Theme.YearlyProgress.AppWidgetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tint="@color/widget_dynamic_background_color"
        android:src="@drawable/app_widget_background" />


    <RelativeLayout
        style="@style/Widget.YearlyProgress.AppWidget.Container"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/topContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/event_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOW"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="@dimen/calendar_widget_event_status"
                android:textColor="@color/widget_dynamic_primary_color"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Lorem ipsum"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/widget_dynamic_accent_color"
                android:textSize="@dimen/calendar_widget_event_title"
                />

            <TextView
                android:id="@+id/event_description"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed eu magna ut nisi laoreet tempus."
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/calendar_widget_event_description"
                android:textColor="@color/widget_seafoam_secondary_color"

                />


            <TextView
                android:id="@+id/event_duration"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Jan 01, 2026 â€¢ All Day"
                android:textSize="@dimen/calendar_widget_event_description"
                android:textColor="@color/widget_seafoam_secondary_color"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottomContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widgetProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/calendar_widget_event_progress"
                android:textColor="@color/widget_dynamic_primary_color"
                android:text="40%"
                />

            <TextView
                android:id="@+id/widgetDays"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textSize="@dimen/calendar_widget_event_days_left"
                android:textStyle="normal"
                android:textColor="@color/widget_dynamic_secondary_color"
                android:text="112d left" />

            <ProgressBar
                android:id="@+id/widgetProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:indeterminate="false"
                android:max="100"
                android:progress="40"
                android:progressBackgroundTint="@color/widget_dynamic_progress_bar_background"
                android:progressTint="@color/widget_dynamic_primary_color"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>