<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/background"
    style="@style/Widget.YearlyProgress.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/App.SplashScreen.AppWidgetContainer">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/eventProgressText" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Lorem ipsum"
                android:textAllCaps="false"
                android:textColor="@color/widget_text_color"
                android:textSize="12sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/eventDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed eu magna ut nisi laoreet tempus."
                android:textAllCaps="false"
                android:textColor="@color/widget_text_color"
                android:textSize="12sp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/eventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="08/01 Â· 7:37 PM"
                android:textAllCaps="false"
                android:textColor="@color/widget_text_color"
                android:textSize="11sp"
                android:textStyle="normal" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/eventProgressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/eventProgressBar"
        android:text="40.48%"
        android:textColor="@color/widget_text_color"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/currentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/eventProgressBar"
        android:layout_alignParentEnd="true"
        android:text="08/09"
        android:textAlignment="textEnd"
        android:textColor="@color/widget_text_color_tertiary"
        android:textSize="11sp" />

    <ProgressBar
        android:id="@+id/eventProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:indeterminate="false"
        android:max="100"
        android:progress="41"
        android:progressBackgroundTint="@color/widget_text_color"
        android:progressTint="@color/widget_text_color" />

</RelativeLayout>