<resources>

    <style name="Widget.YearlyProgess.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">@drawable/app_widget_background</item>
        <item name="android:clipToOutline">true</item>
    </style>

    <style name="Widget.YearlyProgess.AppWidget.InnerView" parent="android:Widget">
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">@drawable/app_widget_inner_view_background</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:clipToOutline">true</item>
    </style>

    <style name="Widget.YearlyProgress.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">@drawable/app_widget_background</item>
        <item name="android:clipToOutline">true</item>
    </style>

    <style name="Widget.YearlyProgress.AppWidget.InnerView" parent="android:Widget">
        <item name="android:padding">?attr/appWidgetPadding</item>
        <item name="android:background">@drawable/app_widget_inner_view_background</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:clipToOutline">true</item>
    </style>

    <style name="CircularProgressIndicator" parent="Widget.AppCompat.ProgressBar">
        <item name="android:padding">5dp</item>
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
        <item name="android:progressTint">@android:color/system_accent1_400</item>
        <item name="android:progressBackgroundTint">@android:color/system_neutral2_100</item>
    </style>
</resources>