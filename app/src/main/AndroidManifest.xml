<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/App.SplashScreen"
        tools:targetApi="31">
        <receiver
            android:name=".mwidgets.AllInWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/all_in_widget_info" />
        </receiver>

        <activity
            android:name=".manager.EventConfigActivity"
            android:exported="true"
            android:windowSoftInputMode="stateVisible|adjustResize|stateHidden"
            android:theme="@style/Theme.YearlyProgress">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".mwidgets.EventWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/event_widget_info" />
        </receiver>

        <activity
            android:name=".FirstScreen"
            android:exported="true"
            android:theme="@style/Theme.YearlyProgress" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_application_id" />
        <!--
            Registration of the Widgets:-
            1. Day
            2. Month
            3. Week
            4. Year
        -->
        <receiver
            android:name=".mwidgets.DayWidget"
            android:exported="false"
            android:label="Day Progress">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/day_widget_info" />
        </receiver>
        <receiver
            android:name=".mwidgets.MonthWidget"
            android:exported="false"
            android:label="Month Progress">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/month_widget_info" />
        </receiver>
        <receiver
            android:name=".mwidgets.YearWidget"
            android:exported="false"
            android:label="Year Progress">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/year_widget_info" />
        </receiver>
        <receiver
            android:name=".mwidgets.WeekWidget"
            android:exported="false"
            android:label="Week Progress">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/week_widget_info" />
        </receiver>
        <!--
            Registration of the Widget Broadcast Receiver:-
            1. Day
            2. Month
            3. Week
            4. Year
        -->
        <receiver
            android:name=".manager.services.DayWidgetService"
            android:enabled="true" />
        <receiver
            android:name=".manager.services.MonthWidgetService"
            android:enabled="true" />
        <receiver
            android:name=".manager.services.WeekWidgetService"
            android:enabled="true" />
        <receiver
            android:name=".manager.services.YearWidgetService"
            android:enabled="true" />
        <receiver
            android:name=".manager.services.EventWidgetService"
            android:enabled="true" />
        <receiver
            android:name=".manager.services.AllInWidgetService"
            android:enabled="true" />

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>