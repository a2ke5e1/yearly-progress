<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.gms.permission.AD_ID" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/App.SplashScreen"
        tools:targetApi="31">
        <activity
            android:theme="@style/Theme.YearlyProgress"
            android:name=".eventManager.ImportEventCalendarActivity"
            android:exported="false" />
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.YearlyProgress.Settings">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".eventManager.EventSelectorActivity"
            android:exported="true"
            android:theme="@style/Theme.YearlyProgress"
            android:windowSoftInputMode="stateVisible|adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".eventManager.EventManagerActivity"
            android:exported="true"
            android:theme="@style/Theme.YearlyProgress"
            android:windowSoftInputMode="stateVisible|adjustResize|stateHidden"></activity>
        <activity
            android:name=".WelcomeScreen"
            android:exported="true"
            android:theme="@style/Theme.YearlyProgress" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_application_id" /> <!-- Registration of the Widgets -->
        <receiver
            android:name=".widgets.AllInWidget"
            android:exported="false"
            android:label="All in One">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/all_in_widget_info" />
        </receiver>
        <receiver
            android:name=".widgets.EventWidget"
            android:exported="false"
            android:label="Event Progress Tracker">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/event_widget_info" />
        </receiver>
        <receiver
            android:name=".widgets.DayWidget"
            android:exported="false"
            android:label="Day Progress">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/day_widget_info" />
        </receiver>
        <receiver
            android:name=".widgets.MonthWidget"
            android:exported="false"
            android:label="Month Progress">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/month_widget_info" />
        </receiver>
        <receiver
            android:name=".widgets.YearWidget"
            android:exported="false"
            android:label="Year Progress">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/year_widget_info" />
        </receiver>
        <receiver
            android:name=".widgets.WeekWidget"
            android:exported="false"
            android:label="Week Progress">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/week_widget_info" />
        </receiver> <!-- Registration of the Widget Broadcast Receiver -->
        <receiver
            android:name=".manager.services.DayWidgetService"
            android:enabled="true" />
        <receiver
            android:name=".manager.services.MonthWidgetService"
            android:enabled="true" />
        <receiver
            android:name=".manager.services.WeekWidgetService"
            android:enabled="true" />
        <receiver
            android:name=".manager.services.YearWidgetService"
            android:enabled="true" />
        <receiver
            android:name=".manager.services.EventWidgetService"
            android:enabled="true" />
        <receiver
            android:name=".manager.services.AllInWidgetService"
            android:enabled="true" />
    </application>

</manifest>